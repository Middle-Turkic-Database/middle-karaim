          <ab>
            <title>Genesis 23</title>
            <milestone unit="line" n="23" />
            <l xml:id="Gen-023-x001">
              <foreign xml:lang="he" style="unicode-bidi: embed;">פרשת חיי שרה</foreign>
              <milestone unit="line" n="24" />
              <foreign xml:lang="he" style="unicode-bidi: embed;">כג׳</foreign>. <foreign xml:lang="he" style="unicode-bidi: embed;">ויהיו חיי שרה וגו׳</foreign><ref target="#fn1" type="noteAnchor" />
            </l>
            <milestone unit="line" n="25" />
            <l n="1" xml:id="Gen-023-001">Da ediler tirlikleri Saranyn iz jyl da egirmi jyl da jedi
              <milestone unit="line" n="26" />jyllar tirlik jyllary Saranyn.
            </l>
            <l n="2" xml:id="Gen-023-002">
              <foreign xml:lang="he" style="unicode-bidi: embed;">ותמת </foreign>
              Da eldi Sara Qirjat
              <milestone unit="line" n="27" />Arbaʿda oldu Ḥevron jerinde Kenaʿannyn da keldi Avraham syjyt etme
              <milestone unit="page" n="22v" />
              <milestone unit="line" n="1" />Sara ücün da jylama anyn ücün.
            </l>
            <l n="3" xml:id="Gen-023-003">
              <foreign xml:lang="he" style="unicode-bidi: embed;">ויקם </foreign>
              Da turdu Avraham
              <milestone unit="line" n="2" />alnyndan elisinin da sözledi uvullaryna Ḥetnin ajtadoɣac.
            </l>
            <l n="4" xml:id="Gen-023-004">
              <foreign xml:lang="he" style="unicode-bidi: embed;">גר</foreign>
              <milestone unit="line" n="3" />Ɣarip da ocar menden birgenizge siznin beriniz mana tutuvluɣun
              <milestone unit="line" n="4" />zeretnin birgenizge da astrajym elimni alnymdan.
            </l>
            <l n="5" xml:id="Gen-023-005">
              <foreign xml:lang="he" style="unicode-bidi: embed;">ויענו </foreign>
              Da
              <milestone unit="line" n="5" />qaruv berdiler uvullary Ḥetnin osol Avrahamɣa ajtadoɣac anar.
            </l>
            <milestone unit="line" n="6" />
            <l n="6" xml:id="Gen-023-006">
              <foreign xml:lang="he" style="unicode-bidi: embed;">שמענו </foreign>
              Tynlaɣyn bizni bijim nasisi Tenrininsen ortamyzda biznin
              <milestone unit="line" n="7" />sajlanmusunda zeretlerimiznin astraɣyn osol elinni kiside bizden
              <milestone unit="line" n="8" />osol zeretin özünün ajamasty senden astramaqtan elinni.
            </l>
            <l n="7" xml:id="Gen-023-007">
              <foreign xml:lang="he" style="unicode-bidi: embed;">ויקם</foreign>
              <milestone unit="line" n="9" />Da turdu Avraham da basurdu ulusuna ol jernin uvullaryna Ḥetnin.
            </l>
            <milestone unit="line" n="10" />
            <l n="8" xml:id="Gen-023-008">
              <foreign xml:lang="he" style="unicode-bidi: embed;">וידבר </foreign>
              Da sözledi birgelerine alarnyn ajtadoɣac eger bar ese osol
              <milestone unit="line" n="11" />kleginizde astrama osol elimni alnymdan tynlanyz meni da qolunuz
              <milestone unit="line" n="12" />menim ücün ʿEfronnu uvlun Coḥarnyn.
            </l>
            <l n="9" xml:id="Gen-023-009">
              <foreign xml:lang="he" style="unicode-bidi: embed;">ויתן </foreign>
              Da bersin mana osol
              <milestone unit="line" n="13" />pecorasyn ol Maḫpelanyn ki anar ki ucunda tizinin tigel kimiske
              <milestone unit="line" n="14" />bersin any mana ortanyzda siznin tutuvluɣuna zeretnin.
            </l>
            <l n="10" xml:id="Gen-023-010">
              <foreign xml:lang="he" style="unicode-bidi: embed;">ועפרון</foreign>
              <milestone unit="line" n="15" />Da ʿEfron oltururedi ortasynda uvullarynyn Ḥetnin da qaruv berdi
              <milestone unit="line" n="16" />ʿEfron ol Ḥitili osol Avrahamɣa qulaqlaryca uvullarynyn Ḥetnin
              <milestone unit="line" n="17" />bar kelivcileri sajyn qabaɣynyn saharynyn ajtadoɣac.
            </l>
            <l n="11" xml:id="Gen-023-011">
              <foreign xml:lang="he" style="unicode-bidi: embed;">לא </foreign>
              Joq bijim
              <milestone unit="line" n="18" />tynlaɣyn meni ol tizni berdim sana da ol pecorany ki anda sana
              <milestone unit="line" n="19" />beremen any közlerice elinin ulusumnun beremen any sana
              <milestone unit="line" n="20" />astraɣyn elinni.
            </l>
            <l n="12" xml:id="Gen-023-012">
              <foreign xml:lang="he" style="unicode-bidi: embed;">וישתחו </foreign>
              Da basurdu Avraham alnynda ulusu-
              <milestone unit="line" n="21" />nun ol jernin.
            </l>
            <l n="13" xml:id="Gen-023-013">
              <foreign xml:lang="he" style="unicode-bidi: embed;">וידבר </foreign>
              Da sözledi ʿEfronɣa qulaqlaryca ulusunun
              <milestone unit="line" n="22" />ol jernin ajtadoɣac tek eger sen közke tynlasyjdyn meni berejim
              <milestone unit="line" n="23" />k<supplied reason="lost">i</supplied>misin<ref target="#fn2" type="noteAnchor" /> ol tiznin alɣyn menden da astrajym osol elimni anda.
            </l>
            <milestone unit="line" n="24" />
            <l n="14" xml:id="Gen-023-014">
              <foreign xml:lang="he" style="unicode-bidi: embed;">ויען </foreign>
              Da qaruv berdi ʿEfron Avrahamɣa ajtadoɣac anar.
            </l>
            <l n="15" xml:id="Gen-023-015">
              <foreign xml:lang="he" style="unicode-bidi: embed;">אדוני</foreign>
              <milestone unit="line" n="25" />Bijim tynlaɣyn meni jer dert iz mitqal kimislik arama menim da arana
              <milestone unit="line" n="26" />senin nedi ol da osol elinni astraɣyn.
            </l>
            <l n="16" xml:id="Gen-023-016">
              <foreign xml:lang="he" style="unicode-bidi: embed;">וישמע </foreign>
              Da tynlady
              <milestone unit="line" n="27" />Avraham ʿEfronɣa da elcedi Avraham ʿEfronɣa osol ol kimisni
              <milestone unit="page" n="23r" />
              <milestone unit="line" n="1" />ki sözledi qulaqlaryca ulanlarynyn Ḥetnin dert iz mitqal kimis asa-
              <milestone unit="line" n="2" />doɣan bezirgenge.
            </l>
            <l n="17" xml:id="Gen-023-017">
              <foreign xml:lang="he" style="unicode-bidi: embed;">ויקם </foreign>
              Da qajjam turdu tizi ʿEfronnun ki Maḫpela-
              <milestone unit="line" n="3" />da ki alnynda Mamrenin ol tiz da ol pecora ki anda da bar ol aɣac
              <milestone unit="line" n="4" />ki tizde ki bar ceginde anyn civre.
            </l>
            <l n="18" xml:id="Gen-023-018">
              <foreign xml:lang="he" style="unicode-bidi: embed;">לאברהם </foreign>
              Avrahamɣa satynal-
              <milestone unit="line" n="5" />maqqa közlerice uvullarynyn Ḥetnin bar kelivcilerinde qabaɣynyn
              <milestone unit="line" n="6" />saharynyn.
            </l>
            <l n="19" xml:id="Gen-023-019">
              <foreign xml:lang="he" style="unicode-bidi: embed;">ואחרי </foreign>
              Da andan sortun alaj astrady Avraham osol Sarany
              <milestone unit="line" n="7" />qatynyn pecorasyna tizinin ol Maḫpelanyn ki alnynda Mamrenin oldu
              <milestone unit="line" n="8" />Ḥevron jerinde Kenaʿannyn.
            </l>
            <l n="20" xml:id="Gen-023-020">
              <foreign xml:lang="he" style="unicode-bidi: embed;">ויקם </foreign>
              Da qajjam boldu ol tiz da ol
              <milestone unit="line" n="9" />pecora ki anda Avrahamɣa tutuvluɣuna zeretnin osol uvullaryn-
              <milestone unit="line" n="10" />dan Ḥetnin.
            </l>
          </ab>
